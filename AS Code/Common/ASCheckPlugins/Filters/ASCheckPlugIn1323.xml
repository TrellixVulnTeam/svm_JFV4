<?xml version="1.0" encoding="utf-8"?>

<PointerEvents>

	<JavaScript>
		<Event>
			<Name>MSPointerDown</Name>
			<Replacement>pointerdown event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerUp</Name>
			<Replacement>pointerup event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerCancel</Name>
			<Replacement>pointercancel event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerMove</Name>
			<Replacement>pointermove event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerOver</Name>
			<Replacement>pointerover event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerOut</Name>
			<Replacement>pointerout event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerEnter</Name>
			<Replacement>pointerenter event</Replacement>
		</Event>

		<Event>
			<Name>MSPointerLeave</Name>
			<Replacement>pointerleave event</Replacement>
		</Event>

		<Event>
			<Name>MSGotPointerCapture</Name>
			<Replacement>gotpointercapture event</Replacement>
		</Event>

		<Event>
			<Name>MSLostPointerCapture</Name>
			<Replacement>lostpointercapture event</Replacement>
		</Event>
		
		<Event>
			<Name>element.style.msTouchAction</Name>
			<Replacement>element.style.touchAction property</Replacement>
		</Event>
		
		<Event>
			<Name>element.msSetPointerCapture</Name>
			<Replacement>element.setPointerCapture() method</Replacement>
		</Event>
		
		<Event>
			<Name>element.msReleasePointerCapture</Name>
			<Replacement>element.releasePointerCapture() method</Replacement>
		</Event>
		
		<Event>
			<Name>msMaxTouchPoints</Name>
			<Replacement>maxTouchPoints</Replacement>
		</Event>
		
	</JavaScript>
  
	<CSS>
		<Event>
			<Name>-ms-touch-action</Name>
			<Replacement>touch-action CSS property</Replacement>
		</Event>
	</CSS>

</PointerEvents>